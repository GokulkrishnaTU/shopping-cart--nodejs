

<section>
    <div class="container">
    <div class="row mt-5">
         {{#each products}}
        <div class="col-md-3 p-3" >
        <div class="card " style="width:15rem ;height:25rem">
  <img class="card-img-top p-2" style="width:15rem ;height:12rem;" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.Name}}</h5>
    <p class="card-text">{{this.Description}}</p>
        <h6 class="card-title">{{this.Price}} INR</h6>

    <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
  </div>
</div>
</div>

 {{/each}}
    </div>
    </div>

</section>
<style>


  .card-title{
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 20px;
    border-radius: 200px;

  }
</style>

  