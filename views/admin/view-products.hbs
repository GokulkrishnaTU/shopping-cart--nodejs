<section>
    <div class="container">
<div class="row mt-3">
    <a href="/admin/add-products" class="btn btn-success ml-auto mb-5">add product</a>
</div>

        <table class="table mt-4" id="productsTable">
  <thead>
    <tr>
    
      <th scope="col">Title</th>
      <th scope="col">Category</th>
 <th scope="col">price</th>

      <th scope="col">Description</th>
            <th>Image</th>
            <th>Options</th>

    </tr>
  </thead>
  <tbody>
    
     {{#each products}}
    <tr>
   
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>

      <td>{{this.Description}}</td>
      <td><img style="width:50px;  height:60px" src="/product-images/{{this._id}}.jpg" alt=""></td>
        <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('confirmation to remove {{this.Name}}')">delete</a>
            </td>

    </tr>
    {{/each}}
 
  </tbody>
</table> 
    </div>
</section>
<script>
  $(function(){
    $('#productsTable').DataTable();
  })
</script>